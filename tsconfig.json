{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@middlewares/*": ["middlewares/*"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@types/*": ["types/*"],
    }
  },
  "include": ["src/**/*", "config"],
  "exclude": ["node_modules", "dist"]
}